.user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 50rpx;
}

.user-box {
    background-color: #F0F4F3;
    padding: 20rpx 0;
}

.user-context {
    background-color: #fff;
    height: 168rpx;
    display: flex;
    align-items: center;
}

.username {
    font-size: 30rpx;
    color: #818a8f;
}

.dec{
    font-size: 30rpx;
    color: #bababa;
}

.list-icon{
    width: 45rpx;
    height: 45rpx;
    margin: 0 40rpx;
}

.list-item {
    height: 122rpx;
    display: flex;
    align-items: center;
}

.type {
    border-bottom: 1px solid #ebebeb;
    flex: 1 1 auto;
    line-height: 122rpx;

}