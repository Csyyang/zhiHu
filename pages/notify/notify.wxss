.notify {
    padding-top: 100rpx;
}

.notify-list {
    
}

.notify-title {
    background-color: #F0F4F3;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
}

.notify-img {
    width: 50rpx;
    height: 50rpx;
}

.notify-text {
    font-size: 22rpx;
    color: #a0acac;
}

.notify-item {
    padding: 25rpx 70rpx 25rpx 20rpx;
    border-bottom: 1rpx solid #ebebeb;
    display: flex;
}

.notify-user {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex: 0 0 auto;
    margin-right: 20rpx;
}

.text1 {
    color: #818A8F;
    font-size: 28rpx;
}
.text2 {
    color: #AFAFAF;
    font-size: 30rpx;
}